---
import Logo from "@assets/dma-logo.png";
import { Image } from "astro:assets";
---

<style>
  .mobile-nav-toggle {
    display: none;
  }
  nav {
    display: grid;
    place-items: center;
    z-index: 5;
  }
  nav > ul {
    display: grid;
    grid-auto-flow: column;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.25rem;
  }

  @media (max-width: 35em) {
    .main-nav {
      position: fixed;
      inset: 0 0 0 30%;
      display: flex;
      flex-direction: column;
      list-style: none;
      margin: 0;
      padding: min(20vh, 4rem);
      gap: 1.25rem;
      background-color: hsl(0 0% 100% / 0.7);
      backdrop-filter: blur(2em);
      transform: translateX(100%);
      transition: transform 120ms ease-in;
    }

    .main-nav[data-visibility="true"] {
      transform: translateX(0%);
    }

    .mobile-nav-toggle {
      display: block;
      background-color: transparent;
      background-image: url(/images/hamburger-open.svg);
      background-repeat: no-repeat;
      background-size: contain;
      position: absolute;
      border: none;
      top: 2rem;
      right: 2rem;
      z-index: 9999;
      width: 2rem;
      aspect-ratio: 1;
    }
  }

  ul > li {
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
  }

  h1 {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  h1 > a {
    text-decoration: none;
    color: inherit;
  }

  nav > ul > li > a {
    text-decoration: none;
    text-align: center;
    display: inline-block;
    color: var(--dma-blue);
    font-weight: 500;
    font-size: 1rem;
  }

  .dropdown__title {
    padding: 0px;
    background-color: transparent;
    border: none;
    text-decoration: none;
    text-align: center;
    display: inline-block;
    color: var(--dma-blue);
    font-weight: 500;
    font-size: 1rem;
  }

  .dropdown {
    position: relative;
  }

  .dropdown > ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .dropdown > ul > li {
    padding-left: 0.5rem;
  }

  .dropdown > .dropdown__menu {
    background-color: var(--dma-blue);

    /* border-radius: 4px; */
    box-shadow: 0 0.15em 0.25em darkblue;
    padding: 0.8rem;
    min-width: 15ch;

    position: absolute;

    top: calc(100% + 0rem);
    left: 50%;
    transform: translateX(-50%);

    transform: rotateX(-90deg) translateX(-50%);
    transform-origin: top center;
    opacity: 0.3;
    transition: 280ms all 120ms ease-out;
  }

  .dropdown:hover .dropdown__menu,
  .dropdown:focus-within .dropdown__menu {
    opacity: 1;
    transform: rotateX(0) translateX(-50%);
    visibility: visible;
  }

  @media (max-width: 35em) {
    .dropdown__menu {
      opacity: 1 !important;
      transform: rotateX(0) translateX(-50%) !important;
      visibility: visible !important;
      position: relative !important;
      top: 0px !important;
    }
  }

  .dropdown__menu > li > a {
    color: white;
    display: block;
    padding: 0.5em;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.2ch;
    white-space: nowrap;
  }
  .dropdown__menu > li > a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: auto;
    width: stretch;
  }

  @media (max-width: 1200px) {
    header {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }

  h1 {
    font-size: 1.2rem;
    color: var(--dma-blue);
  }

  .highlighted > a,
  .highlighted > a:visited {
    color: var(--highlight-color);
  }
</style>

<script>
  const navToggle = document.querySelector(".mobile-nav-toggle");
  const navMenu = document.querySelector(".main-nav");

  navToggle?.addEventListener("click", () => {
    const visibility = navMenu?.getAttribute("data-visibility");
    if (visibility === "false") {
      navMenu?.setAttribute("data-visibility", "true");
    } else if (visibility === "true") {
      navMenu?.setAttribute("data-visibility", "false");
    }
  });
</script>

