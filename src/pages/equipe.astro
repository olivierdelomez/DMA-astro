---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import PhilippeGarcia from "../assets/philippe-garcia.jpeg";
import JessicaSalmon from "../assets/jessicasalmon.webp";
import quisommesnous from "../assets/quisommesnous.webp";
import Gwen from "../assets/gwen.jpg";
import Hero from "@components/Hero.astro";
import Youtube from "@components/Youtube.astro";
---

<style>
  section {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  h1 {
    text-align: center;
  }
  img {
    border-radius: 50%;
    aspect-ratio: 1/1;
  }
  ul {
    margin-bottom: 2rem;
    padding: 0;
    list-style-type: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(225px, 1fr));
    gap: 2rem;
  }
  li,
  li > a {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }
</style>

<Layout title="equipe">
  <Hero asset={quisommesnous} />
  <section class="container-xl stretch">
    <h1>Equipe</h1>
    <ul>
      <li>
        <a href="/equipe/philippe-garcia">
          <Image
            src={PhilippeGarcia}
            width={282}
            height={286}
            alt={"Portrait Philippe Garcia"}
          />
          <span>
            <h3>Philippe Garcia</h3>
            <em>Pr√©sident</em>
          </span>
        </a>
      </li>
      <li>
        <a href="/equipe/jessica-salmon">
          <Image
            src={JessicaSalmon}
            width={282}
            height={286}
            alt={"Portrait Jessica Salmon"}
          />
          <span>
            <h3>Jessica Salmon</h3>
            <em>Membre du CA</em>
          </span>
        </a>
      </li>
    </ul>
    <Youtube videoid="DE2kvrQQVWQ" />
  </section>
</Layout>
