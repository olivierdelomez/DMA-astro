    grid-template-columns: 0 1fr;
    gap: 1.75em;
    align-items: start;
    font-size: 1.5rem;
    line-height: 1.25;
  }
  .link-container > ul > li::before {
    content: attr(data-icon);
    /* Make slightly larger than the li font-size
  but smaller than the li gap */
    font-size: 1.25em;
  }

  aside {
    flex: 1;
    background-color: var(--dma-blue);
    color: white;
    padding: 0.5rem;
    margin-top: auto;
    margin-bottom: auto;
    position: relative;
    min-width: 300px;
  }

  .newsletter {
    position: relative;
    color: white;
    text-align: center;
    padding: 1rem;
    margin-top: 6rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: #0d4ab2a6;
    border-radius: 6px;
  }

  .newsletter::before {
    content: "";
    position: absolute;
    inset: 0 0 0 0;
    z-index: -1;
    border-radius: 6px;
    /* here  */
    --s: 80px; /* the size */
    --c: var(--dma-blue, #5e8c6a);

    --_s: calc(2 * var(--s)) calc(2 * var(--s));
    --_g: 35.36% 35.36% at;
    --_c: #0000 66%, #bfb35a 68% 70%, #0000 72%;
    background: radial-gradient(var(--_g) 100% 25%, var(--_c)) var(--s) var(--s) /
        var(--_s),
      radial-gradient(var(--_g) 0 75%, var(--_c)) var(--s) var(--s) / var(--_s),
      radial-gradient(var(--_g) 100% 25%, var(--_c)) 0 0 / var(--_s),
      radial-gradient(var(--_g) 0 75%, var(--_c)) 0 0 / var(--_s),
      repeating-conic-gradient(var(--c) 0 25%, #0000 0 50%) 0 0 / var(--_s),
      radial-gradient(var(--_c)) 0 calc(var(--s) / 2) / var(--s) var(--s)
        var(--c);
  }

  .newsletter h3 {
    color: white;
  }

  .newsletter > ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  form > button {
    padding: 0.7rem;
    font-size: 1.1rem;
    color: var(--dma-blue);
    background-color: white;
    border: none;
    font-weight: bold;
    text-transform: uppercase;
    margin: 0.5rem;
  }
  form > input {
    height: 42px;
    padding-left: 1rem;
    border-radius: 3px;
    border: none;
    font-size: 1.2rem;
  }
  .description {
    margin-top: 6rem;
    margin-bottom: 6rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
    font-size: 1.4rem;
    padding: 2rem;
    line-height: 1.5;
    background-color: white;
  }
  .link-container {
    place-self: center;
  }
  .link-hover {
    position: relative;
    width: fit-content;
    color: var(--dma-blue);
    margin-top: 0.2rem;
    margin-bottom: 0.2rem;
  }
  .link-hover > a {
    position: relative;
    z-index: 2;
    text-decoration: none;
    color: var(--dma-blue);
  }
  .link-hover:hover > a {
    color: white;
  }
  .link-hover::after {
    content: "";
    position: absolute;
    background-color: var(--dma-blue);
    inset: 16px 0 0 0;
    z-index: 1;
    transform: scaleY(0.2);
    transition: all 100ms ease;
    height: 20px;
  }

  .link-hover:hover::after {
    transform: scaleY(1.4);
    inset: 0 0 0 0;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
