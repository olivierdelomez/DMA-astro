---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import SilureGlanis from "@assets/Silurus_glanis_from_the_Dnieper_River.jpg";
import MigrateursAnadromes from "@assets/migrateur-anadromes.jpg";
import Maigre from "@assets/maigre2.jpg";
import Anguille from "@assets/anguille.jpg";
import OiseauxMarins from "@assets/oiseaux-marins.jpg";
import Dolphins from "@assets/dolphins.jpg";
---

<Layout title="Espèces defendues">
  <section class="container-lg container-white">
    <h1>Espèces defendues</h1>
    <div class="listContainer">
      <a href="/especes-defendues/migrateurs-anadromes">
        <div class="imageContainer">
          <Image
            src={MigrateursAnadromes}
            width={512}
            class="imageBg"
            id="migrateurs_anadromes"
            height={332}
            alt={`Saumon cc NOAA`}
          />
          <div class="backdrop"></div>
          <h3>Migrateurs Anadromes</h3>
        </div>
      </a>
      <a href="/especes-defendues/bars-dauphins">
        <div class="imageContainer">
          <Image
            src={Dolphins}
            width={512}
            class="imageBg"
            transition:name="hero"
            alt={`Bars et Dauphins - credits to https://unsplash.com/@jonasvonwerne`}
          />
          <div class="backdrop"></div>
          <h3>Bars et Dauphins</h3>
        </div>
      </a>
      <a href="/especes-defendues/oiseaux-des-milieux-humides">
        <div class="imageContainer">
          <Image
            src={OiseauxMarins}
            width={512}
            class="imageBg"
            alt={`oiseaux marins credits to https://unsplash.com/@rskjervem`}
          />
          <div class="backdrop"></div>
          <h3>Oiseaux des milieux humides</h3>
        </div>
      </a>
      <a href="/especes-defendues/anguille">
        <div class="imageContainer">
          <Image
            src={Anguille}
            width={512}
            class="imageBg"
            alt={`anguilles - credits to https://unsplash.com/@mtulard`}
          />
          <div class="backdrop"></div>
          <h3>Anguilles</h3>
        </div>
      </a>
      <a href="/especes-defendues/maigre">
        <div class="imageContainer">
          <Image
            src={Maigre}
            width={512}
            class="imageBg"
            alt={`Fernando Losada Rodríguez, CC BY-SA 4.0 <https://creativecommons.org/licenses/by-sa/4.0>, via Wikimedia Commons`}
          />
          <div class="backdrop"></div>
          <h3>Maigre</h3>
        </div>
      </a>
      <a href="/especes-defendues/silure">
        <div class="imageContainer">
          <Image
            src={SilureGlanis}
            width={512}
            class="imageBg"
            alt={`Nikkolo at Ukrainian Wikipedia, CC BY-SA 1.0 <https://creativecommons.org/licenses/by-sa/1.0>, via Wikimedia Commons`}
          />
          <div class="backdrop"></div>
          <h3>Silure Glane</h3>
        </div>
      </a>
    </div>
  </section>
</Layout>

<style>
  a {
    text-decoration: none;
  }
  #migrateurs_anadromes {
    view-transition-name: migrateurs_anadromes;
  }
  .backdrop {
    height: 100%;
    width: 100%;
    max-width: 100%;
    position: absolute;
    object-fit: cover;
    inset: 0px;
    z-index: -10;
    background: linear-gradient(
      to top,
      rgba(00 00 00 / 0.8),
      rgba(00 00 00 / 0.1)
    );
  }
  .listContainer {
    margin-top: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    grid-auto-rows: minmax(260px, 1fr);
    display: grid;
    gap: 2rem;
  }
  .imageContainer {
    isolation: isolate;
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding-top: 20rem;
    padding-bottom: 1rem;
  }
  .imageContainer h3 {
    color: white;
  }
  .imageContainer:hover .backdrop {
    transition: all ease-in-out 0.5s;
    background: linear-gradient(
      to top,
      rgba(00 00 00 / 0.6),
      rgba(00 00 00 / 0.05)
    );
  }
  .imageBg {
    height: 100%;
    width: 100%;
    max-width: 100%;
    position: absolute;
    object-fit: cover;
    inset: 0px;
    z-index: -10;
  }
</style>
